<div class="container">
    <h1 style="text-align:center; padding-top: 20px; padding-bottom: 20px;">Contacts List</h1>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover" style="margin-bottom: 50px;">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactsList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].firstName %></td>
                            <td><%= contacts[count].lastName %></td>
                            <td><%= contacts[count].contactNumber %></td>
                            <td><%= contacts[count].email %></td>
                            
                            <td class="text-center col-1">
                                <a href="/contacts-edit/<%= contacts[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/contacts-delete/<%= contacts[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

