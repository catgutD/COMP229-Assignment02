<div class="container">
    <h1 style="text-align:center; padding-top: 20px; padding-bottom: 20px;"><%= title%></h1>
    <fieldset>
        <form method="POST">
            <input type="hidden" name="id" value="<%= contact._id %>">
            <div class="row">
                <div class="col">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" placeholder="First name" id="firstName" name="firstName" value="<%= contact.firstName %>">
                </div>
                <div class="col">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" placeholder="Last name" id="lastName" name="lastName" value="<%= contact.lastName %>">
                </div>
            </div>
            <div class="form-group">
                <label for="contactNumber">Contact Number</label>
                <input type="tel" class="form-control" pattern="\d{3} \{d3} \d{4}" placeholder="xxx xxx xxxx" id="contactNumber" name="contactNumber" value="<%= contact.contactNumber %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" placeholder="contact@mail.com" id="email" name="email" value="<%= contact.email %>">
            </div>
            <button type="submit" class="btn btn-secondary" style="margin-top: 5px; margin-bottom: 40px;" id="submitButton" name="submitButton">Submit</button>
            <a href="/contacts-list" class="btn btn-secondary" style="margin-top: 5px; margin-bottom: 40px;"><i class="fas fa-undo"></i> Cancel</a>
        </form>
    </fieldset>
</div>