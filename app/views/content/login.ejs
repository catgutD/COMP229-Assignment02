<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6 col-sm-12">
            <div class="login" id="contentArea">
                <h1 style="text-align:center; padding-top: 20px; padding-bottom: 20px;">Login</h1>
  
                <!-- Message Area -->
                <% if(messages.length > 0) { %>
                  <div id="messageArea" class="alert alert-danger">
                  <%= messages %>
                </div>
                <% } %>
  
                <form method="POST" id="loginForm" novalidate>
                  <div class="form-group mb-2">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-user" style = "margin-right: 5px; margin-top: 10px;">
                        </i>
                      </span>
                      <input type="text" class="form-control" id="username" name="username"  required
                      value="" placeholder="Enter your username">
                    </div>
                  
                  </div>
  
                  <div class="form-group mb-2">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock" style = "margin-right: 5px; margin-top: 10px;">
                        </i>
                      </span>
                      <input type="password" class="form-control" id="password" name="password"  required
                      value="" placeholder="Enter your password">
                    </div>
                  
                  </div>                                        
                  <div class="text-end">
                    <button id="loginButton" type="submit" class="btn btn-info" style="margin-top: 5px; margin-bottom: 40px;">
                      <i class="fas fa-sign-in-alt"></i> Login</button>
                      <button id="cancelButton" type="reset" class="btn btn-secondary" style="margin-top: 5px; margin-bottom: 40px;">
                        <i class="fas fa-undo"></i> Cancel</button>
                  </div>
                </form>
            </div>
      </div>
    </div>
  </div>